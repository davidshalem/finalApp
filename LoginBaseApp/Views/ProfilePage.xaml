<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginBaseApp.Views.ProfilePage"
             FlowDirection="RightToLeft"
             Title="פרופיל">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Image Source="{Binding ProfileImageSource}"
             HeightRequest="400" Aspect="AspectFill" BackgroundColor="#EFEFEF" />

            <HorizontalStackLayout Spacing="12">
                <Button Text="בחר מהגלריה" Command="{Binding PickPhotoCommand}" />
                <Button Text="צלם מהמצלמה" Command="{Binding CapturePhotoCommand}" />
                <Button Text="איפוס תמונה"  Command="{Binding ResetPhotoCommand}" />
            </HorizontalStackLayout>

            <Entry Text="{Binding FullName}" Placeholder="שם מלא" />
            <Entry Text="{Binding Email}" Placeholder="אימייל" Keyboard="Email" />
            <Button Text="ניהול מוצרים" Command="{Binding GoToProductsCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
